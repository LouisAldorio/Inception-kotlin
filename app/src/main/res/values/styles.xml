<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="theme">@style/Default</item>
    </style>
    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="theme">
            @style/Default
        </item>
    </style>

    <style name="Default">
        <item name="colorPrimary">@color/yellowInception</item>
        <item name="colorPrimaryDark">@color/yellowInception</item>
        <item name="colorAccent">@color/yellowInception</item>
        <item name="android:textColor">#000000</item>
        <item name="titleTextColor">@color/yourColorTitle</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="MyEditTextTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlHighlight">@color/lightGray</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="circleImageViewStyle" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">360dp</item>
    </style>

</resources>