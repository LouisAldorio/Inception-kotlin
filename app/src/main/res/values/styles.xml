<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="theme">@style/Default</item>
    </style>
    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="theme">
            @style/Default
        </item>
    </style>

    <style name="Default">
        <item name="colorPrimary">@color/yellowInception</item>
        <item name="colorPrimaryDark">@color/yellowInception</item>
        <item name="colorAccent">@color/yellowInception</item>
        <item name="android:textColor">#000000</item>
        <item name="titleTextColor">@color/yourColorTitle</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="MyEditTextTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlHighlight">@color/lightGray</item>
    </style>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="circleImageViewStyle" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">360dp</item>
    </style>

    <style name="ThemeActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/yellowInception</item>
    </style>


    <style name="MainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
    </style>

    <style name="MyTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation" tools:targetApi="lollipop">0dp</item>
<!--        <item name="background">@color/semi_transparent</item>-->
        <item name="android:opacity">translucent</item>
    </style>
    <style name="AppTheme.GenderChip" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">monospace</item>
    </style>



</resources>